<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main neumorphic view that fills the screen -->
    <com.neumorphic.livewallpaper.NeumorphicView
        android:id="@+id/neumorphicView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Control buttons overlay at the bottom -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="#80000000">

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Choose Image"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="12dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/clearBackgroundButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Clear"
            android:textColor="#FFFFFF"
            android:background="#FF6200EE"
            android:padding="12dp"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Instruction text at the top -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Touch and drag to see neumorphic effects"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="#80000000"
        android:padding="12dp" />

</RelativeLayout>
